<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Contacto">

    <Button
        android:id="@+id/BTNHomeContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/asociacion"
        app:icon="@drawable/home"
        app:iconGravity="textEnd"
        app:iconPadding="10dp"
        app:iconSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BTNContactNo"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BTNContactNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/asociacion"
        app:icon="@android:drawable/sym_action_call"
        app:iconGravity="textEnd"
        app:iconPadding="10dp"
        app:iconSize="60dp"
        app:iconTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BTNInfoContact"
        app:layout_constraintStart_toEndOf="@+id/BTNHomeContact" />

    <Button
        android:id="@+id/BTNInfoContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/asociacion"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconGravity="textEnd"
        app:iconPadding="10dp"
        app:iconSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BTNContactNo" />
</androidx.constraintlayout.widget.ConstraintLayout>